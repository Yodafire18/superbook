<p id="notice"><%= notice %></p></p>

<h1>Super Books</h1>
<h3><%= link_to "home", "/books" %></h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published Date</th>
      <th>Price</th>  
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><p><p><%= book.title %></p></p></td>
        
        <td><p><p><%= book.author %></p></p></td>
        
        <td><p><p><%= book.price %></p></p></td>
        
        <td><p><p><%= book.published_date %></p></p></td>
        
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        
        <td><%= link_to 'Delete', delete_book_path(book), :class= => 'action-delete' %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

